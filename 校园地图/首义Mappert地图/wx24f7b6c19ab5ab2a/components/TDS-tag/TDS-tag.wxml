<view class="tag flex-center Paragraphs2 tag-color-{{Color}}" data-theme="{{theme}}">
    <image class="{{IconStyle}}" src="{{IconPath}}" wx:if="{{showIcon&&IconPath&&showLocalSvg}}"></image>
    <image class="small circle" mode="aspectFit" src="{{networkPicturePath}}" wx:if="{{showIcon&&IconPath&&!showLocalSvg}}"></image>
    <text class="tag-fixed flex-center" wx:if="{{FixedWidth}}">{{FixedLabel}}</text>
    <text class="tag-adaptive" wx:if="{{AdaptiveWidth}}">{{AdaptiveLabel}}</text>
    <image class="close" src="/static/svg/close_gray_line.svg" wx:if="{{Closeable}}"></image>
</view>
